---
import { TechSVG } from '@/components/react/portfolio/TechSVG';
---

<h2 class="mt-8">Languages</h2>
<div class="mb-4 mt-2">
	<div class="flex flex-row flex-wrap">
		<TechSVG
			client:idle
			title="Shell/Bash"
			path="/icons/bash-icon-svgrepo-com.svg"
			invert={false}
		/>
		<TechSVG client:idle title="PHP" path="/icons/php02-svgrepo-com.svg" />
		<TechSVG
			client:idle
			title="Javascript"
			path="/icons/javascript-155-svgrepo-com.svg"
		/>
		<TechSVG
			client:idle
			title="Typescript"
			path="/icons/typescript-svgrepo-com.svg"
		/>
		<TechSVG client:idle title="NodeJS" path="/icons/nodejs-svgrepo-com.svg" />
		<TechSVG client:idle title="Lua" path="/icons/lua-16-svgrepo-com.svg" />
	</div>
</div>

<h2 class="mt-8">Frameworks & Libraries</h2>
<div class="mb-4 mt-2">
	<div class="flex flex-row flex-wrap">
		<TechSVG
			client:idle
			title="Express"
			path="/icons/express-svgrepo-com.svg"
		/>
