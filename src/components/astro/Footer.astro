---
import Socials from '@/components/astro/Socials.astro';
---

<div class="p-6 border-t border-neutral-700 md:h-[300px]">
	<div class="mx-auto max-w-4xl">
		<div class="grid grid-cols-2 gap-16">
			<!-- Left Column -->
			<div class="flex flex-col top-0">
				<h2 class="text-xl mb-4">Info</h2>
				<p>this site is designed and maintained by me,</p>
				<p>
					public sourced on <a
						href="https://www.github.com/crowdozer/mainframe"
						target="_blank"
						rel="noopener noreferrer">github</a
					>
				</p>

				<hr class="md:visible hidden mt-2" />
				<p class="mt-4">copyright (c) nobody</p>
			</div>

			<!-- Right Column -->
			<div>
				<h2 class="text-xl mb-4">Business Offers</h2>
				<p>If you want to work together, shoot an email to:</p>
				<p class="text-blue-500 font-bold">business@crwdzr.io</p>

				<h2 class="text-xl mb-4 mt-16">Socials</h2>
				<Socials />
			</div>
		</div>
	</div>
</div>
