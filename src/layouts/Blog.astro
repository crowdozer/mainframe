interface Props {
	title?: string
}

const { title = '' } = Astro.props
---

<Basic {title}>
	<Fragment>
		<div class="mx-auto max-w-[900px] lg:mb-32 lg:mt-16">
			<div class="m-4 bg-neutral-900/50 p-4 lg:m-0">
				<!-- hotlinks -->
				<nav class="mb-2 flex flex-row justify-between gap-2">
					<a href="/" class="p-1">{'< back to crwdzr.io'}</a>

					<div class="flex flex-row gap-4">
